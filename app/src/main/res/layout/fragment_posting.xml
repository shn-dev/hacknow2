<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".phase2.posting.PostingFragment">


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/postType"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:layout_gravity="center"
        >
        <CheckBox
            android:layout_centerVertical="true"
            android:id="@+id/publicCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            />
        <TextView
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/publicCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/publicprivate"
            />

    </RelativeLayout>

    <EditText
        android:gravity="top|left"
        android:id="@+id/postbody"
        android:inputType="textMultiLine"
        android:paddingTop="16dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="@string/postbodytooltip"
        />

</LinearLayout>